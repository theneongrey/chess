@using BlazorWAChess.ViewModel
@using GameLogic
<div class="@CellModel!.CellClass" @onclick="Click">
    <div class="@CellModel!.PieceClass">
        @CellModel!.Icon
    </div>
</div>

@code 
{
    [Parameter]
    public CellVM? CellModel { get; set; }
    [Parameter]
    public GameVM? GameModel { get; set; }
    [Parameter]
    public EventCallback<bool> OnBoardChanged { get; set; }

    public void Click()
    {
        var pieceMoved = GameModel!.CellOnClick(CellModel!.X, CellModel!.Y);
        OnBoardChanged.InvokeAsync(pieceMoved);
    }
}
